<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".ui.MainActivity">
    <LinearLayout
            android:id="@+id/outterLinearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="270dp">
            <android.support.v7.widget.CardView
                    android:layout_width="190dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/linearLayout0"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="137dp"
                            android:layout_height="157dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/apple"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Maça Fuji"
                                android:textSize="25sp" />

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="0,99€ por Kg"
                                  android:layout_marginBottom="8dp"
                                  android:textSize="20sp"
                                  android:fontFamily="@font/roboto_light"/>

                    </LinearLayout>
                    <ImageButton
                            android:tag="0"
                            android:onClick="addBasket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_add_basket"
                            android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="6dp" app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="190dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/linearLayout1"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView android:layout_width="110dp"
                               android:layout_height="120dp"
                               android:src="@drawable/smartphone"
                               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                               android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="2019 8 core android"
                                  android:textSize="25sp"
                                  android:fontFamily="@font/roboto_bold"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Price: 800€"
                                  android:layout_marginBottom="8dp"
                                  android:textSize="20sp"
                                  android:fontFamily="@font/roboto_light"/>

                    </LinearLayout>
                    <ImageButton
                            android:tag="1"
                            android:onClick="addBasket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_add_basket"
                            android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="6dp" app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="270dp">
            <android.support.v7.widget.CardView
                    android:layout_width="190dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/linearLayout2"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView android:layout_width="110dp"
                               android:layout_height="120dp"
                               android:src="@drawable/book"
                               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                               android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Import java.extra.cd"
                                  android:textSize="25sp"
                                  android:fontFamily="@font/roboto_bold"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Price: 55.40€"
                                  android:layout_marginBottom="8dp"
                                  android:textSize="20sp"
                                  android:fontFamily="@font/roboto_light"/>

                    </LinearLayout>
                    <ImageButton
                            android:tag="2"
                            android:onClick="addBasket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_add_basket"
                            android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="6dp" app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="190dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/linearLayout3"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView android:layout_width="110dp"
                               android:layout_height="120dp"
                               android:src="@drawable/chip"
                               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                               android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Antique Mips Chip"
                                  android:textSize="25sp"
                                  android:fontFamily="@font/roboto_bold"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Price: 0.05€"
                                  android:layout_marginBottom="8dp"
                                  android:textSize="20sp"
                                  android:fontFamily="@font/roboto_light"/>

                    </LinearLayout>
                    <ImageButton
                            android:tag="3"
                            android:onClick="addBasket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_add_basket"
                            android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="6dp" app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>